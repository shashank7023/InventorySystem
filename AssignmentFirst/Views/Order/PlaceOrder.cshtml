@model Order

@{
    ViewBag.Title = "Place Order";
}

<h2>Place Order</h2>

<form asp-action="PlaceOrder" method="post" class="form">
    <div class="mb-3">
        <label for="ProductId" class="form-label">Product</label>
        <select asp-for="ProductId" class="form-select">
            <option value="">Select a product</option>
            @foreach (var product in ViewBag.Products as IEnumerable<Product>)
            {
                <option value="@product.Id">@product.Name (@product.Stock in stock)</option>
            }
        </select>
        <span asp-validation-for="ProductId" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="Quantity" class="form-label">Quantity</label>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Place Order</button>
</form>
