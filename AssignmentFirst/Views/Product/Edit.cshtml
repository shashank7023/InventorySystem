@model AssignmentFirst.Models.Product

<!DOCTYPE html>
<html>
<head>
    <title>Edit Product</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            background-color: #f9f9f9;
        }

        h1 {
            text-align: center;
            color: #333;
        }

        .form-container {
            width: 50%;
            margin: 0 auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 5px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

            .form-container label {
                font-size: 16px;
                margin-bottom: 5px;
            }

            .form-container input {
                width: 100%;
                padding: 10px;
                margin-bottom: 15px;
                border: 1px solid #ddd;
                border-radius: 5px;
            }

            .form-container button {
                padding: 10px 20px;
                background-color: #4CAF50;
                color: white;
                border: none;
                border-radius: 5px;
                cursor: pointer;
            }

                .form-container button:hover {
                    background-color: #45a049;
                }

            .form-container .cancel {
                background-color: #f44336;
                text-decoration: none;
                padding: 10px 20px;
                border-radius: 5px;
                color: white;
            }
    </style>
</head>
<body>
    <h1>Edit Product</h1>

    <div class="form-container">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />
            <label for="Name">Product Name:</label>
            <input type="text" id="Name" name="Name" asp-for="Name" required />
            <label for="Price">Price:</label>
            <input type="number" id="Price" name="Price" asp-for="Price" required min="0.01" step="0.01" />
            <label for="Stock">Stock:</label>
            <input type="number" id="Stock" name="Stock" asp-for="Stock" required min="0" />
            <button type="submit">Update Product</button>
        </form>

        <a href="/Product/Index" class="cancel">Cancel</a>
    </div>
</body>
</html>
